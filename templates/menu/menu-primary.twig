{% if menu %}
    {# @TODO Create two templates, vertical and horizontal #}

    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="offcanvas" data-target=".navmenu" data-canvas="body">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div id="primary-menu" class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    {% for item in menu %}
                        <li class="{{item.classes | join(' ')}}">
                            <a class='menu-item-link' href="{{item.get_link}}">{{item.title}}</a>
                            {% include "menu/menu-submenu.twig" with {'menu': item.get_children} %}
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </nav>
{% endif %}